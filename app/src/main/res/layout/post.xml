<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/tvnickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ronaldo7"
        android:textColor="@color/cardview_dark_background"
        android:textSize="28sp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/imgfoto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/tvnickname"
        android:layout_marginTop="10dp"
        android:background="@drawable/foto10"
        />
    <ImageButton
        android:id="@+id/like"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_baseline_favorite_24"
        app:layout_constraintTop_toBottomOf="@id/imgfoto"
        />
    <ImageButton
        android:id="@+id/comment"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_baseline_comment_24"
        app:layout_constraintStart_toEndOf="@id/like"
        app:layout_constraintTop_toBottomOf="@id/imgfoto"
        />
    <ImageButton
        android:id="@+id/archive"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_baseline_archive_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgfoto"
        />
    <TextView
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/comment"
        android:text="ronaldo"
        android:textSize="28sp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:text="Programming is very comfortable work in world"
        android:layout_marginTop="456dp"
/>
</androidx.constraintlayout.widget.ConstraintLayout>